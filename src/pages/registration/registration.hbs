---
  form:
    formName: 'registrationForm'
    formText: 'Sign up'
    descriptionText: 'Already have an account?'
    descriptionLinkText: 'Log in'
    descriptionLink: '/'
    singleColumn: true
    inputs: 
      - {label: "Login", name: 'login',type: 'text', placeholder: "Enter your login", isRequired: true}
      - {label: "First Name", name: 'firstName',type: 'password', placeholder: "Enter your First Name", isRequired: true}
      - {label: "Last Name", name: 'lastName',type: 'text', placeholder: "Enter your Last Name", isRequired: true}
      - {label: "Email Address", name: 'emailAddress',type: 'password', placeholder: "Enter your Email Address", isRequired: true}
      - {label: "Phone", name: 'login',type: 'phone', placeholder: "Enter your Phone", isRequired: true}
      - {label: "Password", name: 'password',type: 'password', placeholder: "Enter your Password", isRequired: true}
    buttons: 
      - {type: "button", text: 'Change Info', isActive: false}
      - {type: "button", text: 'Change Password', isActive: false}
      - {type: "submit", text: 'Cancel', isActive: true}
---

{{!< splitScreen/splitScreenLayout }}

<div class="registration-form-container">
    {{>form/form form}}
</div>
